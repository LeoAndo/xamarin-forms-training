<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimationTryout.MainPage">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Button x:Name="buttonAnimate"
            Text="Tap Me!"
            FontSize="Large"
            Clicked="buttonAnimate_Clicked"
            />
        <Button
            x:Name="buttonAsyncAnimate"
            Text="Tap Me!(Async)"
            Margin="40"
            FontSize="Medium"
            Clicked="buttonAsyncAnimate_Clicked" />
        <Button
            x:Name="buttonCancelAnimate"
            Text="Cancel Animation"
            Margin="40"
            FontSize="Small"
            Clicked="buttonCancelAnimate_Clicked"/>

          <Button
            x:Name="buttonCombineAnimate"
            Text="Tap Me!(Combine)"
            Margin="40"
            FontSize="Small"
            Clicked="buttonCombineAnimate_Clicked"/>
    </StackLayout>
</ContentPage>

