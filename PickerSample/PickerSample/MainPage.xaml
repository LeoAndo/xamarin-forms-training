<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PickerSample.MainPage">

    <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
        <Entry x:Name="entry" Placeholder="Type something, type anything"/>

        <Picker x:Name="picker" Title="Keyboard Type" SelectedIndexChanged="Picker_SelectedIndexChanged">
            <Picker.Items>
                <x:String>Chat</x:String>
                <x:String>Default</x:String>
                <x:String>Email</x:String>
                <x:String>Numeric</x:String>
                <x:String>Plain</x:String>
                <x:String>Telephone</x:String>
                <x:String>Text</x:String>
                <x:String>Url</x:String>
            </Picker.Items>
            <Picker.SelectedIndex>3</Picker.SelectedIndex>
        </Picker>
    </StackLayout>

</ContentPage>
