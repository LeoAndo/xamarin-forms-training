<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ButtonImageSample.MainPage">

    <StackLayout Padding="40">

        <Button Text="Good">
            <Button.ImageSource>
                <OnPlatform x:TypeArguments="FileImageSource"
                            iOS="ic_action_good.png" Android="ic_action_good.png" />
            </Button.ImageSource>
        </Button>

         <Button Text="Bad">
            <Button.ImageSource>
                <OnPlatform x:TypeArguments="FileImageSource"
                            iOS="ic_action_bad.png" Android="ic_action_bad.png" />
            </Button.ImageSource>
        </Button>
    </StackLayout>

</ContentPage>
