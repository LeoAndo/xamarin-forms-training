<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BitmapSample.ImageResourcePage">
    <ScrollView>
        <StackLayout Padding="50" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <Label Text="sample for bitmap FromResource" Style="{DynamicResource TitleStyle}"/>
            <Label x:Name="renderSize" />
            <Image x:Name="imagePokemon" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" SizeChanged="renderSize_SizeChanged" />
        </StackLayout>
    </ScrollView>
</ContentPage>
