<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomFontSample.MainPage"
             xmlns:fontAwesome="clr-namespace:FontAwesome">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <!--FontFamilyには、AssemblyInfo.csで定義したAlias名を指定する-->
        <Label Text="Custom Fonts" FontSize="30" />
        <Label
            Text="Hello, FAB"
            FontSize="Large"
            FontFamily="FAB"/>
        <Label
            Text="Hello, FAR"
            FontSize="Large"
            FontFamily="FAR"/>
        <Label
            Text="Hello, FAS"
            FontSize="Large"
            FontFamily="FAS"/>
        <Label Text="Custom Icons" FontSize="30" />

        <!-- font FamilyにfontAwesomeで提供されるフォントファイルを指定すること. -->
        <Label Text="{x:Static fontAwesome:FontAwesomeIcons.Github}" FontFamily="FAB" Margin="8" />
        <Label Text="{x:Static fontAwesome:FontAwesomeIcons.CheckCircle}" FontFamily="FAR" Margin="8" />
        <Label Text="{x:Static fontAwesome:FontAwesomeIcons.AlarmPlus}" FontFamily="FAR" Margin="8" />
    </StackLayout>

</ContentPage>
