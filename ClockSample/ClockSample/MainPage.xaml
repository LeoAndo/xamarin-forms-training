<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClockSample.MainPage"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:ClockSample">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:DateTimeViewModel x:Key="viewModel" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
        <Label
            Text="{
            Binding Source={x:Static sys:DateTime.Now},
            StringFormat='launch app date at {0:F}' }"/>
        <Label
            Text="{
            Binding Source={x:StaticResource viewModel},
            Path=DateTime.Hour,
            StringFormat='hour is {0}' } "/>

        <Label
            Text="{
            Binding Source={x:StaticResource viewModel},
            Path=DateTime.Minute,
            StringFormat='minute is {0}' } "/>

        <Label
            Text="{
            Binding Source={x:StaticResource viewModel},
            Path=DateTime.Second,
            StringFormat='second is {0}' } "/>

        <Label
            Text="{
            Binding Source={x:StaticResource viewModel},
            Path=DateTime.Millisecond,
            StringFormat='millisecond is {0}' } "/>
    </StackLayout>
</ContentPage>
